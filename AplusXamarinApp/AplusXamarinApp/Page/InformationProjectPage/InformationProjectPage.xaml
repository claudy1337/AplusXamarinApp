<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplusXamarinApp.Page.InformationProjectPage.InformationProjectPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="pencil.png" Priority="0" Order="Primary" x:Name="TEditing" Clicked="TEditing_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <FlexLayout  Direction="Column">
                <Label Text="ОПИСАНИЕ: " HorizontalTextAlignment="Center" TextColor="Black" Margin="10"/>
                <ListView x:Name="friendsList" ItemsSource="{Binding}" ItemSelected="friendsList_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Label Padding="10" TextColor="Black" HorizontalTextAlignment="Center" TextType="Html" 
                                           FontSize="Body" Text="{Binding ProjectTitle}" x:Name="LContent"/>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>